<% if flash[:notice] %>
  <p id="notice">
    <%=flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0">
 <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%=image_tag @user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <td>name</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= @user.introduction %></td>
          </tr>
        </tbody>
      </table>


      <svg class="svg-inline--fa fa-user-cog fa-w-20" aria-hidden="true" focusable="false" data-prefix="fas" data-icon"user-cog" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" data-fa-i2svg></svg>
      <button type="button" class="btn btn-secondary btn-lg">Large button</button>



     <h2>New Book</h2>
      <% if @book.errors.any? %>
       <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= form_with model: @book, url: '/books', method: :post do |f| %>

        <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
        </div>
        <div class="field">
        <h4>Opinion</h4>
        <%= f.text_area :body%>
        </div>
        <div class="actions">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>
   </div>
  </div>



  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
       <div class="row">
       <% @books.each do |book| %>
        <tr>
         <td>
           <%= link_to user_path(user_id) do %>
            <%= image_tag @user.get_profile_image(100,100) %>
           <% end %>
         </td>
         <td>
           <%= link_to book_path(@book.id)%>
           <%= book.title %>
         </td>
         <td><%= book.body %></td>
        </tr>
       <% end %>
       </div>
      </tbody>
    </table>
  </div>
</div>