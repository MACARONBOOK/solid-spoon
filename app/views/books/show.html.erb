<% if flash[:notice] %>
  <p id="notice">
    <%=flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user ,book: @book %>



    </div>
  </div>

  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
       <div class="row">
       <% @books.each do |book| %>
        <tr>
         <td>
           <%= link_to user_path(@user.id) do %>
            <%= image_tag @user.get_profile_image(100, 100) %>
           <% end %>
         </td>
         <td>
           <%= link_to book_path(@book.id)%>
           <%= book.title %>
         </td>
         <td><%= book.body %></td>
        </tr>
       <% end %>
       </div>
      </tbody>
    </table>
  </div>
</div>