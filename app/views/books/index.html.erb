<h1>Books</h1>
<table>
  <thead>
    <tr>
      <the colspan="3">
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(user_id) do %>
          <%= image_tag book.get_profile_image %>
        <% end %>
      </td>
      <td><><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
