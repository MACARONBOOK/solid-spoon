<% if flash[:notice] %>
  <p id="notice">
    <%=flash[:notice] %></p>
<% end %>

<% if @user.errors.any? %>

      <%= @user.errors.count %> errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>

 <% end %>
<div class="container">
 <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
     <%=form_with model: @user do |f| %>
      <div class="field">
       <label>Name</label>
       <%=f.text_field :name %>
      </div>
      <div>
       <label>Image</label>
       <input class="form-control-file user_image" accept="image/*" type="file" name="user[profile_image]" id="user_profile_image">
      </div>
      <div class="field">
       <label>Introduction</label>
       <%=f.text_area :introduction%>
      </div>
      <div class="field">
       <%=f.submit"Update User" %>
      </div>
     <% end %>
    </div>
  </div>
</div>